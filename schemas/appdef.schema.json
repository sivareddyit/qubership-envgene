{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "registryName": {
      "type": "string"
    },
    "artifactId": {
      "type": "string"
    },
    "groupId": {
      "type": "string"
    },
    "supportParallelDeploy": {
      "type": "boolean"
    },
    "deployParameters": {
      "$ref": "#/definitions/mapString"
    },
    "technicalConfigurationParameters": {
      "$ref": "#/definitions/mapString"
    },
    "solutionDescriptor": {
      "type": "boolean"
    },
    "metadata" : {
      "$ref": "#/definitions/metaString"
    }
  },
  "definitions": {
    "mapString": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "metaString": {
      "type": ["object","null"],
      "properties": {
        "helmReleaseNameStrategy": {
          "type": "string",
          "enum": ["perApplication", "perVersion", "perDeployment"]
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "name",
    "registryName",
    "artifactId",
    "groupId",
    "supportParallelDeploy",
    "deployParameters",
    "technicalConfigurationParameters"
  ]
}